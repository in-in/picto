mj-head
  mj-title Picto
  mj-font(
    name='Open Sans'
    href='https://fonts.googleapis.com/css?family=Open+Sans:600,700')/
  mj-font(
    name='Roboto'
    href='https://fonts.googleapis.com/css?family=Roboto:400,500')/
  mj-style(inline='inline') 
    | a { text-decoration: none; color: inherit; }
    | p { margin: 0; color: inherit;}
    | .section { background-color: red; }
  mj-attributes
    mj-class(
      name='section'
      padding-right='30px'
      padding-left='30px'
      background-color='#fff')/
    mj-class(
      name='section--image'
      padding='0'
      padding-right='0'
      padding-left='0'
      background-color='tan')/
